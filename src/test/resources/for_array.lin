// Example illustrating the translation of arrays and for loops.
//

let v = array array int;

for i = 0 to 4 do {
  v += array int;
  for j = 4 to 0 step -1 do {
    v!i += 5 * i + j
  }
};

let c = array int;
c += 0;

for j = 4 to 0 step -1 do {
  for i = 0 to 4 do {
    print v!i!j;
    c!0 := c!0 + v!i!j
  }
};

print c!0
